<h1>Contact Page</h1>

<div class="form-group form-group-lg row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
    {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus" key-press=(action "startType")}}
  </div>
  <br>
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
    {{input type="message" value=messageText class="form-control" placeholder="Please type your message here. (5 characters long)" autofocus="autofocus"}}
  </div>
  <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
      <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'saveMessage'}}>Send Message</button>
  </div>
</div>

  {{responseMessage}}
